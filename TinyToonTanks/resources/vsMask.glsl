void main()
{
	vec4 pos = gl_ModelViewProjectionMatrix * gl_Vertex;
	vec3 norm = gl_NormalMatrix * gl_Normal;
	norm = normalize(norm);
	pos = pos + (0.6*vec4(norm.x, norm.y, norm.z, 0));
	gl_Position = pos;
}
